<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="top"
        ohos:bottom_margin="10vp"
        ohos:left_margin="16vp"
        ohos:orientation="horizontal"
        ohos:top_margin="20vp">

        <Image
            ohos:id="$+id:icon_back"
            ohos:height="20vp"
            ohos:width="20vp"
            ohos:image_src="$media:icon_back"
            ohos:scale_mode="stretch"
            />

        <Text
            ohos:id="$+id:text_familyName"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:left_margin="16vp"
            ohos:text="xxx家庭"
            ohos:text_color="#FF000000"
            ohos:text_size="18fp"/>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:background_element="$color:background_page"
        ohos:left_padding="15vp"
        ohos:right_padding="15vp"
        ohos:top_padding="20vp">

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="$graphic:background_device_list"
            ohos:bottom_padding="20vp"
            ohos:left_padding="20vp"
            ohos:right_padding="20vp"
            >

            <Text
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:text="创建成功!"
                ohos:text_alignment="center"
                ohos:text_size="18fp"
                ohos:top_padding="20vp"/>

            <DependentLayout
                ohos:id="$+id:familyCreateSuccess_dl_addMember"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:bottom_padding="20vp"
                ohos:top_padding="20vp">

                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:text="邀请成员加入"
                    ohos:text_size="16fp"
                    />

                <Image
                    ohos:id="$+id:invite_user_right_icon"
                    ohos:height="16vp"
                    ohos:width="16vp"
                    ohos:align_parent_right="true"
                    ohos:image_src="$media:icon_main_right"
                    ohos:scale_mode="stretch"
                    />
            </DependentLayout>

            <Component
                ohos:height="1vp"
                ohos:width="match_parent"
                ohos:background_element="#EAEAEC"/>

            <DependentLayout
                ohos:id="$+id:familyCreateSuccess_dl_setFamily"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:top_padding="20vp">

                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:text="去设置家庭"
                    ohos:text_size="16fp"
                    />

                <Image
                    ohos:id="$+id:setting_family_right_icon"
                    ohos:height="16vp"
                    ohos:width="16vp"
                    ohos:align_parent_right="true"
                    ohos:image_src="$media:icon_main_right"
                    ohos:scale_mode="stretch"
                    />
            </DependentLayout>
        </DirectionalLayout>


    </DirectionalLayout>


</DirectionalLayout>