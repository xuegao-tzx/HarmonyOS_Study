<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:alarm_dl_container"
    ohos:height="64vp"
    ohos:width="336vp"
    ohos:alignment="center"
    ohos:background_element="$graphic:background_card"
    ohos:orientation="horizontal"
    ohos:top_margin="32vp"
    ohos:total_weight="8">

    <Image
        ohos:id="$+id:alarm_img_icon"
        ohos:height="24vp"
        ohos:width="24vp"
        ohos:image_src="$media:icon_schedule_error"
        ohos:weight="1"/>

    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_content"
        ohos:alignment="vertical_center"
        ohos:weight="6">

        <Text
            ohos:id="$+id:alarm_text_type"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="【报警】"
            ohos:text_color="$color:red"
            ohos:text_size="14fp"/>

        <Text
            ohos:id="$+id:alarm_text_message"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="请立即检查家庭情况"
            ohos:text_color="$color:text_level_three"
            ohos:text_size="12fp"/>

    </DirectionalLayout>

    <Image
        ohos:height="16vp"
        ohos:width="16vp"
        ohos:image_src="$media:icon_main_right"/>
</DirectionalLayout>