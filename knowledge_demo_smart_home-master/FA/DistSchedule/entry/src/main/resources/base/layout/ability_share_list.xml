<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="horizontal_center"
    ohos:background_element="#F7F7F7"
    ohos:orientation="vertical">

    <!--顶部-->
    <DirectionalLayout
        ohos:height="56vp"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="horizontal"
        ohos:right_padding="16vp">

        <DependentLayout
            ohos:id="$+id:inputname_dl_back"
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:alignment="center">

            <Image
                ohos:id="$+id:inputname_img_back"
                ohos:height="24vp"
                ohos:width="24vp"
                ohos:image_src="$media:icon_back"
                ohos:left_margin="24vp"
                ohos:right_margin="18vp"/>
        </DependentLayout>

        <Text
            ohos:id="$+id:top_text_title"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="共享列表"
            ohos:text_size="16fp"
            ohos:weight="1"/>


        <DependentLayout
            ohos:id="$+id:shareDevice_dl_allSelected"
            ohos:height="40vp"
            ohos:width="match_content"
            ohos:alignment="center">

            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:left_margin="24vp"
                ohos:scale_mode="inside"
                ohos:text="全选"
                ohos:text_color="#0A59F7"
                ohos:text_size="14vp"
                ohos:vertical_center="true"/>
        </DependentLayout>

    </DirectionalLayout>


    <DirectionalLayout
        ohos:id="$+id:sharelit_dl_show"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_card"
        ohos:left_margin="12vp"
        ohos:orientation="vertical"
        ohos:right_margin="12vp"
        ohos:top_margin="20vp">

        <ListContainer
            ohos:id="$+id:shareList_listContainer"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:top_margin="16vp"/>


        <Button
            ohos:id="$+id:shareList_bt_sure"
            ohos:height="40vp"
            ohos:width="match_parent"
            ohos:align_parent_bottom="true"
            ohos:background_element="$graphic:background_button_dark"
            ohos:bottom_margin="33vp"
            ohos:left_margin="32vp"
            ohos:right_margin="32vp"
            ohos:text="完成"
            ohos:text_color="#0A59F7"
            ohos:text_size="14fp"
            ohos:top_margin="50vp"/>

    </DirectionalLayout>


    <DirectionalLayout
        ohos:id="$+id:sharelit_dl_empty"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="vertical">

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="暂无数据"
            ohos:text_size="14vp"/>

    </DirectionalLayout>


</DirectionalLayout>