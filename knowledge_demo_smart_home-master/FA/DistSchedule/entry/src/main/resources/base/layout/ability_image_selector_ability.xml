<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#dddddd"
    ohos:orientation="vertical">

    <DependentLayout
        ohos:id="$+id:toolbar"
        ohos:height="45vp"
        ohos:width="match_parent"
        ohos:background_element="#ffffff">

        <DirectionalLayout
            ohos:height="56vp"
            ohos:width="match_parent"
            ohos:alignment="center"
            ohos:background_element="$graphic:background_fraction_top"
            ohos:left_padding="24vp"
            ohos:orientation="horizontal"
            ohos:right_padding="24vp">

            <Image
                ohos:id="$+id:selectorphoto_img_cancel"
                ohos:height="24vp"
                ohos:width="24vp"
                ohos:image_src="$media:icon_close"/>

            <Text
                ohos:id="$+id:top_text_title"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:left_margin="18vp"
                ohos:text_size="16fp"
                ohos:weight="1"/>


            <Image
                ohos:id="$+id:selectorphoto_img_confirm"
                ohos:height="24vp"
                ohos:width="24vp"
                ohos:image_src="$media:icon_ok"/>

        </DirectionalLayout>
    </DependentLayout>

    <StackLayout
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="#aaaaaa"
        ohos:below="$id:toolbar"/>

    <Text
        ohos:id="$+id:loading"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:layout_alignment="center"
        ohos:text="加载中..."
        ohos:text_alignment="center"
        ohos:text_color="#2b2b2b"
        ohos:text_size="20fp"/>

    <ListContainer
        ohos:id="$+id:doodle_list_image"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:below="$id:toolbar"
        ohos:right_padding="3vp"
        />
</DependentLayout>