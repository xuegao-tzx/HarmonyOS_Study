<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#F1F3F5"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="60vp"
        ohos:width="match_parent"
        ohos:alignment="vertical_center"
        ohos:background_element="#FFFFFF"
        ohos:orientation="horizontal">

        <Image
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:image_src="$media:icon_back"
            ohos:left_margin="22vp"
            ohos:right_margin="18vp"/>

        <Text
            ohos:id="$+id:net_text_network"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:alpha="0.8"
            ohos:text="网络设置"
            ohos:text_size="18vp"/>

    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:alignment="horizontal_center"
        ohos:background_element="#FFFFFF"
        ohos:orientation="vertical"
        ohos:top_margin="2vp">

        <Image
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:image_src="$media:icon_network_fail"
            ohos:top_margin="97vp"/>

        <Text
            ohos:id="$+id:net_text_fail"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="配网失败"
            ohos:text_size="18vp"/>

        <Button
            ohos:id="$+id:net_button_cancel"
            ohos:height="40vp"
            ohos:width="280vp"
            ohos:background_element="$graphic:background_ability_cancel"
            ohos:text="取消"
            ohos:text_color="#0A59F7"
            ohos:text_size="14vp"
            ohos:top_margin="148vp"/>

        <Button
            ohos:id="$+id:net_button_ok"
            ohos:height="40vp"
            ohos:width="280vp"
            ohos:background_element="$graphic:background_ability_cancel"
            ohos:text="查看帮助"
            ohos:text_color="#0A59F7"
            ohos:text_size="14vp"
            ohos:top_margin="16vp"/>

    </DirectionalLayout>


</DirectionalLayout>