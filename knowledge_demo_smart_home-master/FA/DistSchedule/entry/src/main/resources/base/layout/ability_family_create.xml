<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="vertical">


    <DirectionalLayout
        ohos:height="56vp"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:background_element="$graphic:background_card"
        ohos:orientation="horizontal"
        ohos:right_padding="24vp">

        <DependentLayout
            ohos:id="$+id:createFamily_dl_back"
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:alignment="center">

            <Image
                ohos:height="24vp"
                ohos:width="24vp"
                ohos:image_src="$media:icon_back"
                ohos:left_margin="24vp"
                ohos:right_margin="18vp"/>
        </DependentLayout>

        <Text
            ohos:id="$+id:top_text_title"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="新建家庭"
            ohos:text_size="16fp"
            ohos:weight="1"/>

    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:alignment="horizontal_center">

        <TextField
            ohos:id="$+id:textFiled_familyName"
            ohos:height="40vp"
            ohos:width="match_parent"
            ohos:background_element="$graphic:background_ability_cancel"
            ohos:hint="输入您的家庭名称"
            ohos:left_margin="20vp"
            ohos:left_padding="15vp"
            ohos:multiple_lines="false"
            ohos:right_margin="20vp"
            ohos:text_alignment="vertical_center"
            ohos:text_size="16fp"
            ohos:top_margin="100vp"
            />

        <Button
            ohos:id="$+id:button_create"
            ohos:height="40vp"
            ohos:width="match_parent"
            ohos:background_element="$graphic:background_button_state"
            ohos:clickable="true"
            ohos:enabled="false"
            ohos:left_margin="20vp"
            ohos:right_margin="20vp"
            ohos:text="立即创建"
            ohos:text_color="#FFFFFF"
            ohos:text_size="14vp"
            ohos:top_margin="300vp"/>
    </DirectionalLayout>

</DirectionalLayout>