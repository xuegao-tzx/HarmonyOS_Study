<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:selectDevice_dl_item"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:left_margin="12vp"
    ohos:orientation="vertical"
    ohos:right_margin="12vp">


    <Text
        ohos:id="$+id:selectDevice_text_deviceType"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:bottom_margin="16vp"
        ohos:text="家庭设备"
        ohos:text_size="14vp"
        ohos:top_margin="32vp"/>

    <DependentLayout
        ohos:height="80vp"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_card"
        ohos:bottom_margin="12vp">

        <Image
            ohos:id="$+id:selectDevice_img_icon"
            ohos:height="56vp"
            ohos:width="56vp"
            ohos:vertical_center="true"/>


        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:left_margin="76vp"
            ohos:orientation="vertical"
            ohos:vertical_center="true">

            <Text
                ohos:id="$+id:selectDevice_text_deviceName"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="台灯"
                ohos:text_size="14vp"/>

            <Text
                ohos:id="$+id:selectDevice_text_deviceOwner"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="来自我的设备"
                ohos:text_color="#cccccc"
                ohos:text_size="14vp"/>
        </DirectionalLayout>


        <Text
            ohos:id="$+id:selectDevice_text_isOnLine"
            ohos:height="16vp"
            ohos:width="36vp"
            ohos:align_parent_right="true"
            ohos:text="离线"
            ohos:text_alignment="center"
            ohos:text_size="10vp"/>

        <Image
            ohos:id="$+id:member_img_checkbox"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:align_parent_right="true"
            ohos:image_src="$media:icon_unselected"
            ohos:right_margin="18vp"
            ohos:vertical_center="true"/>

    </DependentLayout>

</DirectionalLayout>