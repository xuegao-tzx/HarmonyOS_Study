<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#F7F7F7"
    ohos:orientation="vertical">


    <DirectionalLayout
        ohos:height="56vp"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:background_element="$graphic:background_card"
        ohos:orientation="horizontal"
        ohos:right_padding="24vp">

        <DependentLayout
            ohos:id="$+id:myQrcode_dl_back"
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:alignment="center">

            <Image
                ohos:id="$+id:myQrcode_img_back"
                ohos:height="24vp"
                ohos:width="24vp"
                ohos:image_src="$media:icon_back"
                ohos:left_margin="24vp"
                ohos:right_margin="18vp"/>
        </DependentLayout>

        <Text
            ohos:id="$+id:top_text_title"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="我的二维码"
            ohos:text_size="16fp"
            ohos:weight="1"/>

    </DirectionalLayout>


    <DirectionalLayout
        ohos:height="354vp"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:background_element="$graphic:background_card"
        ohos:left_margin="16vp"
        ohos:orientation="vertical"
        ohos:right_margin="16vp">

        <Image
            ohos:id="$+id:myQrCodeSlice_img_qrcode"
            ohos:height="match_content"
            ohos:width="match_content"/>

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="扫一扫我的二维码添加"
            ohos:text_size="14fp"
            ohos:top_margin="37vp"/>

    </DirectionalLayout>


</DirectionalLayout>