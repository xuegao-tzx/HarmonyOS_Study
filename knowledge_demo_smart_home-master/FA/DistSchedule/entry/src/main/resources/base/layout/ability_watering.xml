<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$color:background_page"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="60vp"
        ohos:width="match_parent"
        ohos:alignment="vertical_center"
        ohos:orientation="horizontal">

        <Image
            ohos:id="$+id:watering_img_left"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:image_src="$media:icon_back"
            ohos:left_margin="25vp"
            ohos:right_margin="15vp"/>

        <Text
            ohos:id="$+id:watering_text_name"
            ohos:height="25vp"
            ohos:width="209vp"
            ohos:text="护花使者"
            ohos:text_color="$color:black"
            ohos:text_size="18vp"/>

        <Image
            ohos:id="$+id:watering_img_right"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:image_src="$media:icon_about"
            ohos:left_margin="39vp"/>
    </DirectionalLayout>

    <ScrollView
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical">

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content">

            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:alignment="center"
                ohos:orientation="vertical"
                ohos:top_margin="8vp">

                <Image
                    ohos:id="$+id:watering_image_logo"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:image_src="$media:icon_watering"/>
            </DirectionalLayout>

            <DirectionalLayout
                ohos:height="88vp"
                ohos:width="336vp"
                ohos:alignment="vertical_center"
                ohos:background_element="$graphic:background_white_rectangle_corners16"
                ohos:left_margin="12vp"
                ohos:orientation="horizontal"
                ohos:top_margin="32vp">

                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:alpha="0.9"
                    ohos:left_margin="16vp"
                    ohos:text="距上次浇水"
                    ohos:text_color="$color:black"
                    ohos:text_size="18vp"/>

                <Text
                    ohos:id="$+id:watering_text_day"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:left_margin="47vp"
                    ohos:text="7"
                    ohos:text_color="$color:black"
                    ohos:text_size="24vp"/>

                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:alpha="0.6"
                    ohos:left_margin="4vp"
                    ohos:text="天"
                    ohos:text_color="$color:black"
                    ohos:text_size="12vp"/>

                <Image
                    ohos:id="$+id:watering_image_switch"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:image_src="$media:icon_switch_off"
                    ohos:left_margin="85vp"/>
            </DirectionalLayout>

            <DirectionalLayout
                ohos:height="88vp"
                ohos:width="336vp"
                ohos:alignment="vertical_center"
                ohos:background_element="$graphic:background_white_rectangle_corners16"
                ohos:left_margin="12vp"
                ohos:orientation="horizontal"
                ohos:top_margin="12vp">

                <DirectionalLayout
                    ohos:height="88vp"
                    ohos:width="112vp"
                    ohos:alignment="center">

                    <DirectionalLayout
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:alignment="vertical_center"
                        ohos:orientation="horizontal">

                        <Text
                            ohos:id="$+id:watering_text_temperature"
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:text="17"
                            ohos:text_color="$color:black"
                            ohos:text_size="24vp"/>

                        <Text

                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:alpha="0.6"
                            ohos:text="℃"
                            ohos:text_color="$color:black"
                            ohos:text_size="12vp"/>

                        <Image
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:image_src="$media:icon_split_line"/>
                    </DirectionalLayout>

                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:alpha="0.6"
                        ohos:text="温度"
                        ohos:text_color="$color:black"
                        ohos:text_size="12vp"/>
                </DirectionalLayout>

                <DirectionalLayout
                    ohos:height="88vp"
                    ohos:width="112vp"
                    ohos:alignment="center">

                    <DirectionalLayout
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:alignment="vertical_center"
                        ohos:orientation="horizontal">

                        <Text
                            ohos:id="$+id:watering_text_humidity"
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:text="60"
                            ohos:text_color="$color:black"
                            ohos:text_size="24vp"/>

                        <Text

                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:alpha="0.6"
                            ohos:text="%"
                            ohos:text_color="$color:black"
                            ohos:text_size="12vp"/>

                        <Image
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:image_src="$media:icon_split_line"/>
                    </DirectionalLayout>

                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:alpha="0.6"
                        ohos:text="湿度"
                        ohos:text_color="$color:black"
                        ohos:text_size="12vp"/>
                </DirectionalLayout>

                <DirectionalLayout
                    ohos:height="88vp"
                    ohos:width="112vp"
                    ohos:alignment="center">

                    <DirectionalLayout
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:alignment="vertical_center"
                        ohos:orientation="horizontal">

                        <Text
                            ohos:id="$+id:watering_text_moisture"
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:text="55"
                            ohos:text_color="$color:black"
                            ohos:text_size="24vp"/>

                        <Text

                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:alpha="0.6"
                            ohos:text="%"
                            ohos:text_color="$color:black"
                            ohos:text_size="12vp"/>

                        <Image
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:image_src="$media:icon_split_line"/>
                    </DirectionalLayout>

                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:alpha="0.6"
                        ohos:text="土壤水分"
                        ohos:text_color="$color:black"
                        ohos:text_size="12vp"/>
                </DirectionalLayout>
            </DirectionalLayout>

            <DirectionalLayout
                ohos:height="108vp"
                ohos:width="336vp"
                ohos:background_element="$graphic:background_white_rectangle_corners16"
                ohos:left_margin="12vp"
                ohos:orientation="vertical"
                ohos:top_margin="12vp">

                <DirectionalLayout
                    ohos:height="36vp"
                    ohos:width="match_content"
                    ohos:alignment="vertical_center"
                    ohos:orientation="horizontal">

                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:left_margin="20vp"
                        ohos:text="水量调节"
                        ohos:text_color="$color:black"
                        ohos:text_size="16vp"/>

                    <Text
                        ohos:id="$+id:watering_text_waterVolume"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:left_margin="4vp"
                        ohos:text="50"
                        ohos:text_color="$color:blue"
                        ohos:text_size="12vp"/>

                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:text="ml"
                        ohos:text_color="$color:blue"
                        ohos:text_size="12vp"/>
                </DirectionalLayout>

                <Slider
                    ohos:id="$+id:watering_slider_bright"
                    ohos:height="30vp"
                    ohos:width="300vp"
                    ohos:divider_lines_enabled="true"
                    ohos:divider_lines_number="5"
                    ohos:left_margin="12vp"
                    ohos:max="500"
                    ohos:min="0"
                    ohos:progress="50"
                    ohos:progress_color="$color:blue"
                    ohos:progress_width="2vp"/>

                <DirectionalLayout
                    ohos:height="36vp"
                    ohos:width="match_content"
                    ohos:alignment="vertical_center"
                    ohos:orientation="horizontal">

                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:alpha="0.38"
                        ohos:left_margin="20vp"
                        ohos:text="0"
                        ohos:text_color="$color:black"
                        ohos:text_size="12vp"/>

                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:alpha="0.38"
                        ohos:left_margin="20vp"
                        ohos:text="100ml"
                        ohos:text_color="$color:black"
                        ohos:text_size="12vp"/>

                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:alpha="0.38"
                        ohos:left_margin="20vp"
                        ohos:text="200ml"
                        ohos:text_color="$color:black"
                        ohos:text_size="12vp"/>

                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:alpha="0.38"
                        ohos:left_margin="20vp"
                        ohos:text="300ml"
                        ohos:text_color="$color:black"
                        ohos:text_size="12vp"/>

                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:alpha="0.38"
                        ohos:left_margin="20vp"
                        ohos:text="400ml"
                        ohos:text_color="$color:black"
                        ohos:text_size="12vp"/>

                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:alpha="0.38"
                        ohos:left_margin="20vp"
                        ohos:text="500ml"
                        ohos:text_color="$color:black"
                        ohos:text_size="12vp"/>

                </DirectionalLayout>
            </DirectionalLayout>

            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:orientation="horizontal">

                <DirectionalLayout
                    ohos:height="64vp"
                    ohos:width="162vp"
                    ohos:alignment="vertical_center"
                    ohos:background_element="$graphic:background_white_rectangle_corners16"
                    ohos:left_margin="12vp"
                    ohos:orientation="horizontal"
                    ohos:right_margin="12vp"
                    ohos:top_margin="12vp">


                    <Text
                        ohos:id="$+id:watering_text_timer"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:left_margin="16vp"
                        ohos:text="定时"
                        ohos:text_color="$color:black"
                        ohos:text_size="16vp"/>


                    <Image
                        ohos:id="$+id:watering_image_timer"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:image_src="$media:icon_timer_unselected"
                        ohos:left_margin="56vp"/>
                </DirectionalLayout>

                <DirectionalLayout
                    ohos:height="64vp"
                    ohos:width="162vp"
                    ohos:alignment="vertical_center"
                    ohos:background_element="$graphic:background_white_rectangle_corners16"
                    ohos:orientation="horizontal"
                    ohos:top_margin="12vp">

                    <Text
                        ohos:id="$+id:watering_text_appoint"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:left_margin="16vp"
                        ohos:text="预约"
                        ohos:text_color="$color:black"
                        ohos:text_size="16vp"/>

                    <Image
                        ohos:id="$+id:watering_image_appoint"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:image_src="$media:icon_appoint_unselected"
                        ohos:left_margin="56vp"/>
                </DirectionalLayout>
            </DirectionalLayout>


            <DirectionalLayout
                ohos:height="35vp"
                ohos:width="match_parent"
                ohos:alignment="center"
                ohos:orientation="horizontal"
                ohos:top_margin="8vp">

                <Text
                    ohos:id="$+id:watering_text_state"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:alpha="0.6"
                    ohos:text="收起"
                    ohos:text_color="$color:black"
                    ohos:text_size="16vp"/>

                <Image
                    ohos:id="$+id:watering_image_state"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:image_src="$media:icon_tucked"
                    ohos:left_margin="16vp"/>
            </DirectionalLayout>

            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:top_margin="16vp">

                <Text
                    ohos:id="$+id:watering_text_device"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:left_margin="16vp"
                    ohos:line_height_num="23.5vp"
                    ohos:text="设备服务"
                    ohos:text_color="$color:black"
                    ohos:text_size="18vp"/>

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:bottom_margin="8vp"
                    ohos:orientation="horizontal"
                    ohos:top_margin="8vp">

                    <DirectionalLayout
                        ohos:height="64vp"
                        ohos:width="162vp"
                        ohos:alignment="vertical_center"
                        ohos:background_element="$graphic:background_white_rectangle_corners16"
                        ohos:left_margin="16vp"
                        ohos:orientation="horizontal"
                        ohos:right_margin="12vp"
                        ohos:top_margin="12vp">

                        <Text
                            ohos:id="$+id:watering_text_more"
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:left_margin="16vp"
                            ohos:text="更多产品"
                            ohos:text_color="$color:black"
                            ohos:text_size="16vp"/>


                        <Image
                            ohos:id="$+id:watering_image_more"
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:image_src="$media:icon_more_device"
                            ohos:left_margin="37.2vp"/>
                    </DirectionalLayout>

                    <DirectionalLayout
                        ohos:height="64vp"
                        ohos:width="162vp"
                        ohos:alignment="vertical_center"
                        ohos:background_element="$graphic:background_white_rectangle_corners16"
                        ohos:orientation="horizontal"
                        ohos:top_margin="12vp">

                        <Text
                            ohos:id="$+id:watering_text_replace"
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:left_margin="16vp"
                            ohos:text="配件更换"
                            ohos:text_color="$color:black"
                            ohos:text_size="16vp"/>

                        <Image
                            ohos:id="$+id:watering_image_replace"
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:image_src="$media:icon_replace"
                            ohos:left_margin="37.2vp"/>
                    </DirectionalLayout>
                </DirectionalLayout>
            </DirectionalLayout>

        </DirectionalLayout>

    </ScrollView>
</DirectionalLayout>