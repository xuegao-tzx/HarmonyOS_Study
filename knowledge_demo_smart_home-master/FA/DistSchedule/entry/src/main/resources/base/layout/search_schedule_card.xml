<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:schedule_text_date"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:left_margin="16vp"
        ohos:text="2021年9月24日"
        ohos:text_size="14fp"
        ohos:top_margin="32vp"/>

    <com.daimajia.swipe.SwipeLayout
        ohos:id="$+id:swipe"
        ohos:height="104vp"
        ohos:width="336vp"
        ohos:left_margin="12vp"
        ohos:top_margin="16vp">

        <DirectionalLayout
            ohos:id="$+id:card_dl_bottom"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:alignment="center"
            ohos:background_element="$graphic:background_device_card"
            ohos:orientation="horizontal"
            ohos:total_weight="8">

            <Text
                ohos:height="match_parent"
                ohos:width="0vp"
                ohos:text="确定删除本条日程吗？"
                ohos:text_alignment="center"
                ohos:text_color="$color:text_level_one"
                ohos:text_size="14vp"
                ohos:weight="7"/>

            <DirectionalLayout
                ohos:id="$+id:card_dl_delete"
                ohos:height="match_parent"
                ohos:width="0vp"
                ohos:alignment="center"
                ohos:background_element="$graphic:background_card_delete"
                ohos:weight="1">

                <Image
                    ohos:height="24vp"
                    ohos:width="24vp"
                    ohos:image_src="$media:icon_delete"/>
            </DirectionalLayout>

        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:alignment="center"
            ohos:background_element="$graphic:background_device_card"
            ohos:orientation="horizontal">

            <DirectionalLayout
                ohos:id="$+id:scheduleCard_dl_side"
                ohos:height="match_parent"
                ohos:width="8vp"
                ohos:background_element="$graphic:background_device_card_side">
            </DirectionalLayout>

            <DirectionalLayout
                ohos:id="$+id:scheduleCard_dl_card"
                ohos:height="match_parent"
                ohos:width="match_content"
                ohos:bottom_padding="14vp"
                ohos:left_padding="24vp"
                ohos:right_padding="24vp"
                ohos:top_padding="14vp"
                ohos:weight="1">

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:alignment="vertical_center"
                    ohos:orientation="horizontal">

                    <Text
                        ohos:id="$+id:schedule_text_name"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:right_margin="12vp"
                        ohos:text="日程名字"
                        ohos:text_color="$color:black"
                        ohos:text_size="16fp"/>
                    <!--                <Text-->
                    <!--                    ohos:text_size="14fp"-->
                    <!--                    ohos:text="添加人"-->
                    <!--                    ohos:text_color="$color:text_level_three"-->
                    <!--                    ohos:height="match_content"-->
                    <!--                    ohos:width="match_content"/>-->
                </DirectionalLayout>

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:alignment="vertical_center"
                    ohos:orientation="horizontal"
                    ohos:weight="1">

                    <Image
                        ohos:height="16vp"
                        ohos:width="16vp"
                        ohos:image_src="$media:icon_schedule_time"
                        ohos:right_margin="10vp"/>

                    <Text
                        ohos:id="$+id:schedule_text_duration"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:text="9:00-9:30"
                        ohos:text_color="$color:blue"
                        ohos:text_size="14fp"
                        ohos:weight="1"/>

                    <Image
                        ohos:height="24vp"
                        ohos:width="24vp"
                        ohos:image_src="$media:icon_schedule_success"
                        ohos:right_margin="10vp"/>
                </DirectionalLayout>

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:alignment="vertical_center">

                    <Text
                        ohos:id="$+id:scheduleCard_text_command"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:text="关闭扫地机等家务设备，打开智能台灯"
                        ohos:text_color="$color:text_level_three"
                        ohos:text_size="14fp"/>
                </DirectionalLayout>
            </DirectionalLayout>
        </DirectionalLayout>

    </com.daimajia.swipe.SwipeLayout>


</DirectionalLayout>
