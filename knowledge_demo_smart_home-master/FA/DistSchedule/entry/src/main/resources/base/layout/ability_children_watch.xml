<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$color:background_page"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="60vp"
        ohos:width="match_parent"
        ohos:alignment="vertical_center"
        ohos:orientation="horizontal">

        <Image
            ohos:id="$+id:watch_img_left"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:image_src="$media:icon_back"
            ohos:left_margin="25vp"
            ohos:right_margin="15vp"/>

        <Text
            ohos:id="$+id:watch_text_name"
            ohos:height="25vp"
            ohos:width="209vp"
            ohos:text="儿童手表"
            ohos:text_color="$color:black"
            ohos:text_size="18vp"/>

        <Image
            ohos:id="$+id:watch_img_right"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:image_src="$media:icon_about"
            ohos:left_margin="39vp"/>
    </DirectionalLayout>

    <ScrollView
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical">

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content">

            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:alignment="center"
                ohos:orientation="vertical"
                ohos:top_margin="8vp">

                <Image
                    ohos:id="$+id:watch_image_logo"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:image_src="$media:icon_children_watch"/>
            </DirectionalLayout>

            <DirectionalLayout
                ohos:height="88vp"
                ohos:width="336vp"
                ohos:alignment="vertical_center"
                ohos:background_element="$graphic:background_white_rectangle_corners16"
                ohos:left_margin="12vp"
                ohos:orientation="horizontal"
                ohos:top_margin="32vp">

                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:left_margin="16vp"
                    ohos:line_height_num="13.5vp"
                    ohos:text="已在线"
                    ohos:text_color="$color:black"
                    ohos:text_size="18vp"/>

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="200vp"
                    ohos:alignment="horizontal_center"
                    ohos:orientation="vertical">

                    <DirectionalLayout
                        ohos:height="match_content"
                        ohos:width="match_content">

                        <Text
                            ohos:id="$+id:watch_text_postion"
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:text="22.7,114.2"
                            ohos:text_color="$color:black"
                            ohos:text_size="24vp"/>

                        <Text
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:alpha="0.6"
                            ohos:left_margin="30vp"
                            ohos:text="实时定位"
                            ohos:text_color="$color:black"
                            ohos:text_size="12vp"/>

                    </DirectionalLayout>
                </DirectionalLayout>

                <Image
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:image_src="$media:icon_battery_powersaving"
                    ohos:right_margin="16vp"/>
            </DirectionalLayout>

            <DirectionalLayout
                ohos:height="88vp"
                ohos:width="336vp"
                ohos:alignment="center"
                ohos:background_element="$graphic:background_white_rectangle_corners16"
                ohos:left_margin="12vp"
                ohos:orientation="horizontal"
                ohos:top_margin="12vp">

                <DirectionalLayout
                    ohos:height="88vp"
                    ohos:width="112vp"
                    ohos:alignment="center"
                    ohos:orientation="vertical">

                    <DirectionalLayout
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:orientation="horizontal">

                        <Text
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:line_height_num="24.5fp"
                            ohos:text="85"
                            ohos:text_color="$color:black"
                            ohos:text_size="24vp"/>

                        <Text
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:alpha="0.6"
                            ohos:left_margin="3vp"
                            ohos:text="分钟"
                            ohos:text_color="$color:black"
                            ohos:text_size="12vp"/>

                    </DirectionalLayout>

                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:alpha="0.6"
                        ohos:text="今日运动量"
                        ohos:text_color="$color:black"
                        ohos:text_size="12vp"/>

                </DirectionalLayout>

                <DirectionalLayout
                    ohos:height="match_parent"
                    ohos:width="60vp">

                    <Image
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:image_src="$media:icon_split_line">
                    </Image>
                </DirectionalLayout>

                <DirectionalLayout
                    ohos:height="88vp"
                    ohos:width="112vp"
                    ohos:alignment="center"
                    ohos:orientation="vertical">

                    <DirectionalLayout
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:orientation="horizontal">

                        <Text
                            ohos:id="$+id:watch_step_value"
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:text="18000"
                            ohos:text_color="$color:black"
                            ohos:text_size="24vp"/>

                        <Text
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:alpha="0.6"
                            ohos:text="步"
                            ohos:text_color="$color:black"
                            ohos:text_size="12vp"/>
                    </DirectionalLayout>

                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:alpha="0.6"
                        ohos:text="今日步数"
                        ohos:text_color="$color:black"
                        ohos:text_size="12vp"/>
                </DirectionalLayout>
            </DirectionalLayout>

            <DirectionalLayout
                ohos:height="64vp"
                ohos:width="336vp"
                ohos:alignment="vertical_center"
                ohos:background_element="$graphic:background_white_rectangle_corners16"
                ohos:left_margin="12vp"
                ohos:orientation="horizontal"
                ohos:top_margin="12vp">

                <Image
                    ohos:id="$+id:watch_image_contacts_delete"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:image_src="$media:icon_delete_contacts_unable"
                    ohos:left_margin="16vp"/>

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="256vp"
                    ohos:alignment="horizontal_center"
                    ohos:orientation="vertical">

                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:alpha="0.9"
                        ohos:text="紧急联系人"
                        ohos:text_color="$color:black"
                        ohos:text_size="16vp"/>

                    <Text
                        ohos:id="$+id:watch_text_contacts_number"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:alpha="0.6"
                        ohos:text="暂无"
                        ohos:text_color="$color:black"
                        ohos:text_size="12vp"/>
                </DirectionalLayout>

                <Image
                    ohos:id="$+id:watch_image_contacts_add"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:image_src="$media:icon_add_contacts"
                    ohos:right_margin="16vp"/>
            </DirectionalLayout>

            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:orientation="horizontal">

                <DirectionalLayout
                    ohos:height="64vp"
                    ohos:width="162vp"
                    ohos:alignment="vertical_center"
                    ohos:background_element="$graphic:background_white_rectangle_corners16"
                    ohos:left_margin="12vp"
                    ohos:orientation="horizontal"
                    ohos:right_margin="12vp"
                    ohos:top_margin="12vp">

                    <Text
                        ohos:height="match_content"
                        ohos:width="68vp"
                        ohos:left_margin="16vp"
                        ohos:text="打电话"
                        ohos:text_color="$color:black"
                        ohos:text_size="16vp"/>

                    <Image
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:image_src="$media:icon_call"
                        ohos:left_margin="38vp"/>
                </DirectionalLayout>

                <DirectionalLayout
                    ohos:height="64vp"
                    ohos:width="162vp"
                    ohos:alignment="vertical_center"
                    ohos:background_element="$graphic:background_white_rectangle_corners16"
                    ohos:orientation="horizontal"
                    ohos:top_margin="12vp">

                    <Text
                        ohos:height="match_content"
                        ohos:width="95vp"
                        ohos:left_margin="16vp"
                        ohos:text="视频通话"
                        ohos:text_color="$color:black"
                        ohos:text_size="16vp"/>

                    <Image
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:image_src="$media:icon_call_video"
                        ohos:left_margin="11vp"/>
                </DirectionalLayout>
            </DirectionalLayout>


            <DirectionalLayout
                ohos:height="64vp"
                ohos:width="336vp"
                ohos:alignment="vertical_center"
                ohos:background_element="$graphic:background_white_rectangle_corners16"
                ohos:left_margin="12vp"
                ohos:orientation="horizontal"
                ohos:top_margin="12vp">

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_content">

                    <Text
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:left_margin="16vp"
                        ohos:text="课堂禁用"
                        ohos:text_color="$color:black"
                        ohos:text_size="16vp"/>

                    <Text
                        ohos:id="$+id:watch_text_class_switch"
                        ohos:height="match_content"
                        ohos:width="match_content"
                        ohos:alpha="0.6"
                        ohos:left_margin="16vp"
                        ohos:text="已关闭"
                        ohos:text_color="$color:black"
                        ohos:text_size="12vp"/>
                </DirectionalLayout>

                <Image
                    ohos:id="$+id:watch_image_class_switch"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:image_src="$media:img_switch_on"
                    ohos:left_margin="202vp"/>
            </DirectionalLayout>

            <DirectionalLayout
                ohos:height="35vp"
                ohos:width="match_parent"
                ohos:alignment="center"
                ohos:orientation="horizontal"
                ohos:top_margin="8vp">

                <Text
                    ohos:id="$+id:watch_text_state"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:alpha="0.6"
                    ohos:text="收起"
                    ohos:text_color="$color:black"
                    ohos:text_size="16vp"/>

                <Image
                    ohos:id="$+id:watch_image_state"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:image_src="$media:icon_tucked"
                    ohos:left_margin="16vp"/>
            </DirectionalLayout>

            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:top_margin="16vp">

                <Text
                    ohos:id="$+id:watch_text_device"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:left_margin="16vp"
                    ohos:line_height_num="23.5vp"
                    ohos:text="设备服务"
                    ohos:text_color="$color:black"
                    ohos:text_size="18vp"/>

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:bottom_margin="8vp"
                    ohos:orientation="horizontal"
                    ohos:top_margin="8vp">

                    <DirectionalLayout
                        ohos:height="64vp"
                        ohos:width="162vp"
                        ohos:alignment="vertical_center"
                        ohos:background_element="$graphic:background_white_rectangle_corners16"
                        ohos:left_margin="16vp"
                        ohos:orientation="horizontal"
                        ohos:right_margin="12vp"
                        ohos:top_margin="12vp">

                        <Text
                            ohos:id="$+id:watch_text_more"
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:left_margin="16vp"
                            ohos:text="更多产品"
                            ohos:text_color="$color:black"
                            ohos:text_size="16vp"/>


                        <Image
                            ohos:id="$+id:watch_image_more"
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:image_src="$media:icon_more_device"
                            ohos:left_margin="37.2vp"/>
                    </DirectionalLayout>

                    <DirectionalLayout
                        ohos:height="64vp"
                        ohos:width="162vp"
                        ohos:alignment="vertical_center"
                        ohos:background_element="$graphic:background_white_rectangle_corners16"
                        ohos:orientation="horizontal"
                        ohos:top_margin="12vp">

                        <Text
                            ohos:id="$+id:watch_text_replace"
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:left_margin="16vp"
                            ohos:text="配件更换"
                            ohos:text_color="$color:black"
                            ohos:text_size="16vp"/>

                        <Image
                            ohos:id="$+id:watch_image_replace"
                            ohos:height="match_content"
                            ohos:width="match_content"
                            ohos:image_src="$media:icon_replace"
                            ohos:left_margin="37.2vp"/>
                    </DirectionalLayout>
                </DirectionalLayout>
            </DirectionalLayout>

        </DirectionalLayout>

    </ScrollView>
</DirectionalLayout>