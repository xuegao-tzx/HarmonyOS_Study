<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#FFFFFF"
    ohos:orientation="vertical">


    <DirectionalLayout
        ohos:height="56vp"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:background_element="$graphic:background_card"

        ohos:orientation="horizontal"
        ohos:right_padding="24vp">

        <DependentLayout
            ohos:id="$+id:addmember_dl_back"
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:alignment="center">

            <Image
                ohos:id="$+id:addmember_img_back"
                ohos:height="24vp"
                ohos:width="24vp"
                ohos:image_src="$media:icon_back"
                ohos:left_margin="24vp"
                ohos:right_margin="18vp"/>
        </DependentLayout>

        <Text
            ohos:id="$+id:top_text_title"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="邀请成员"
            ohos:text_size="16fp"
            ohos:weight="1"/>

    </DirectionalLayout>


    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:left_margin="24vp"
        ohos:text="1:生成二维码加入"
        ohos:text_size="14fp"
        ohos:top_margin="24vp"/>

    <DirectionalLayout
        ohos:height="230vp"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:left_margin="16vp"
        ohos:orientation="vertical"
        ohos:right_margin="16vp">

        <Image
            ohos:id="$+id:addmemberslice_img_qrcode"
            ohos:height="120vp"
            ohos:width="120vp"/>

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="扫一扫加入我的家庭"
            ohos:text_size="12fp"
            ohos:top_margin="20vp"/>

    </DirectionalLayout>

    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:left_margin="24vp"
        ohos:text="2:输入手机号邀请"
        ohos:text_size="14fp"
        ohos:top_margin="24vp"/>


    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:top_margin="29vp">

        <TextField
            ohos:id="$+id:addmember_tf_phone"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:basement="#000000"
            ohos:left_margin="24vp"
            ohos:right_margin="26vp"
            ohos:text_size="16fp"
            ohos:weight="1"/>

        <Image
            ohos:id="$+id:addmember_img_scan"
            ohos:height="24vp"
            ohos:width="24vp"
            ohos:image_src="$media:icon_scan"
            ohos:right_margin="24vp"/>

    </DirectionalLayout>

    <Button
        ohos:id="$+id:addmember_bt_sure"
        ohos:height="36vp"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_button_dark"
        ohos:left_margin="40vp"
        ohos:right_margin="40vp"
        ohos:text="确定"
        ohos:text_color="$color:col_0a59f7"
        ohos:text_size="14fp"
        ohos:top_margin="32vp"/>


</DirectionalLayout>