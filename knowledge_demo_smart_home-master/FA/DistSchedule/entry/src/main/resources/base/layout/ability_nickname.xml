<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#F7F7F7"
    ohos:orientation="vertical">


    <DirectionalLayout
        ohos:height="56vp"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:background_element="$graphic:background_card"
        ohos:orientation="horizontal"
        ohos:right_padding="24vp">

        <DependentLayout
            ohos:id="$+id:inputname_dl_back"
            ohos:height="match_parent"
            ohos:width="match_content"
            ohos:alignment="center">

            <Image
                ohos:id="$+id:inputname_img_back"
                ohos:height="24vp"
                ohos:width="24vp"
                ohos:image_src="$media:icon_back"
                ohos:left_margin="24vp"
                ohos:right_margin="18vp"/>
        </DependentLayout>

        <Text
            ohos:id="$+id:top_text_title"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="我的用户名"
            ohos:text_size="16fp"
            ohos:weight="1"/>

    </DirectionalLayout>


    <DependentLayout
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:alignment="vertical_center"
        ohos:background_element="$graphic:background_textfield"
        ohos:left_margin="16vp"
        ohos:right_margin="16vp"
        ohos:top_margin="32vp">

        <TextField
            ohos:id="$+id:inputname_textfield_name"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:left_margin="20vp"
            ohos:right_margin="45vp"
            ohos:text_size="14fp"/>

        <Image
            ohos:id="$+id:inputname_img_delete"
            ohos:height="14vp"
            ohos:width="14vp"
            ohos:align_parent_right="true"
            ohos:image_src="$media:icon_close_text"
            ohos:right_margin="25vp"
            ohos:vertical_center="true"/>

    </DependentLayout>

    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:left_margin="16vp"
        ohos:text="一个简单好听的名称可以更让人记住"
        ohos:text_color="$color:black"
        ohos:text_size="14fp"
        ohos:top_margin="19fp"/>


    <Button
        ohos:id="$+id:inputname_bt_sure"
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_button_normal_state"
        ohos:bottom_margin="24vp"
        ohos:left_margin="40vp"
        ohos:right_margin="40vp"
        ohos:text="完成"
        ohos:text_color="$color:white"
        ohos:text_size="14fp"
        ohos:top_margin="318vp"/>


</DirectionalLayout>